/*
 * Correct Device Tree Overlay Structure
 */

/ {
    aliases {
        potentiometer = &pot_channel;
    };
};

// Target the adc1 peripheral
&adc1 {
    status = "okay";

    // âœ… CORRECT: The channel is a CHILD of &adc1
    pot_channel: channel@9 {
        reg = <9>;                 // This is now correctly interpreted as a channel number
        label = "POTENTIOMETER";
        zephyr,resolution = <12>;
    };
};